	li(class='D(f) W(100%) Mb(1rem) Jc(fe)')
		img(
			alt='avatar'
			src=avatarPath
			width='50'
			height='50'
			class='Bdrs(50%) As(fe) Mend(1rem) D(n) D(b)--lg'
		)
		div(class='Maw(558px) Bxz(bb) D(f) Fld(c) Bdrs(16px) Bxsh(shadowSm) P(1.5rem) Bgc(primaryColor)')
			p(class='Mt(0) Mb(8px) Lh(1.5rem) C(lightColor)') #{message}
			p(class='My(0) Fz(14px) Lh(21px) Pt(5px) Bdt(myMsgBorder) C(msgTimeColor2)') #{time}