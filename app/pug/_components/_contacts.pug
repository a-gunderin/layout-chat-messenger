include ../_data/_contacts
include ../_mixins/_mixins

- const defContactsBlockClasses = 'D(f) Fld(c) H(100%) Pb(1rem) Ov(h)';
- const disabledContactsBlockClasses = 'D(f) Fld(c) H(100%) Pb(1rem) Ov(h) D(n)';

div(
	id='contacts'
	data-tab-block='contacts'
	class=chatPageActive ? disabledContactsBlockClasses : defContactsBlockClasses
)
	+asideHeader('Контакты', 'contacts-form', 'contacts-input', 'Поиск по контактам')

	ul(class='hide-scrollbar My(0) List(n) Px(1.5rem) Ov(a)')

		each persons, letter in contacts
			li
				div(class='Mb(1rem) Lh(1.5rem) C(secondaryColor)') #{letter}
				each contact in persons
					+asideLink('#test', contact.avatar, contact.name, contact.status)
